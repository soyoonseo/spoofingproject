<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:ems="10"
                android:hint="이름" />

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:ems="10"
                android:hint="이메일" />

            <EditText
            android:id="@+id/phoneEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:ems="10"
            android:hint="휴대폰"/>

            <TextView
                android:id="@+id/noticeView"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="촬영방법"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toTopOf="@+id/recordnotice"
                app:layout_constraintStart_toStartOf="@+id/recordnotice"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/recordnotice" />

            <TextView
                android:id="@+id/notice2View"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:text="좌우로 천천히 움직여 주세요"
                android:textColor="#000000"
                android:textSize="15sp"
                android:layout_marginBottom="10dp"
                />

            <Button
                android:id="@+id/signUpButton"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="촬영하기"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/recordnotice"
                app:layout_constraintStart_toStartOf="@+id/recordnotice"
                app:layout_constraintTop_toBottomOf="@+id/recordnotice"/>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>